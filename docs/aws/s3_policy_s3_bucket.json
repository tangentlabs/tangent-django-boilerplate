{
    "Version": "2008-10-17",
    "Id": "Policy1392737836785",
    "Statement": [
        {
            "Sid": "Stmt1392737818510",
            "Effect": "Allow",
            "Principal": {
                "AWS": "*"
            },
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::{BUCKET_NAME}/media/*",
            "Condition": {
                "StringLike": {
                    "aws:Referer": [
                        "http://{DOMAIN_NAME}/*",
                        "http://www.{DOMAIN_NAME}/*"
                    ]
                }
            }
        },
        {
            "Sid": "Stmt1392737835452",
            "Effect": "Allow",
            "Principal": {
                "AWS": "*"
            },
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::{BUCKET_NAME}/static/*",
            "Condition": {
                "StringLike": {
                    "aws:Referer": [
                        "http://{DOMAIN_NAME}/*",
                        "http://www.{DOMAIN_NAME}/*"
                    ]
                }
            }
        }
    ]
}
